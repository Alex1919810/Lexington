<Window x:Class="Lexington.View.WeatherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lexington.View"
        mc:Ignorable="d"
        Height="200" Width="400"
        Style="{StaticResource stlWindow}"
        PreviewMouseLeftButtonDown="Window_MouseLeftButtonDown"
        PreviewMouseMove="Window_MouseMove"
        PreviewMouseLeftButtonUp="Window_MouseLeftButtonUp"
        BorderBrush="Black" BorderThickness="1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" x:Name="FirstBorder">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Style="{StaticResource TransTextBox}" Text="{Binding FirstDate}"/>
                <TextBox Grid.Row="1" Style="{StaticResource TransTextBox}" Text="{Binding FirstWeather}"/>
                <TextBox Grid.Row="2" Style="{StaticResource TransTextBox}" Text="{Binding FirstTemp}"/>
                <TextBox Grid.Row="3" Style="{StaticResource TransTextBox}" Text="{Binding FirstWind}"/>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="White"/>


        <Border Grid.Column="2" x:Name="SecondBorder">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Style="{StaticResource TransTextBox}" Text="{Binding SecondDate}"/>
                <TextBox Grid.Row="1" Style="{StaticResource TransTextBox}" Text="{Binding SecondWeather}"/>
                <TextBox Grid.Row="2" Style="{StaticResource TransTextBox}" Text="{Binding SecondTemp}"/>
                <TextBox Grid.Row="3" Style="{StaticResource TransTextBox}" Text="{Binding SecondWind}"/>
            </Grid>
        </Border>
        
        <Border Grid.Column="3" Background="White"/>


        <Border Grid.Column="4" x:Name="ThirdBorder">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Style="{StaticResource TransTextBox}" Text="{Binding ThirdDate}"/>
                <TextBox Grid.Row="1" Style="{StaticResource TransTextBox}" Text="{Binding ThirdWeather}"/>
                <TextBox Grid.Row="2" Style="{StaticResource TransTextBox}" Text="{Binding ThirdTemp}"/>
                <TextBox Grid.Row="3" Style="{StaticResource TransTextBox}" Text="{Binding ThirdWind}"/>
            </Grid>
        </Border>
        
        <Border Grid.Column="5" Background="White"/>


        <Border Grid.Column="6" x:Name="FourthBorder">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Style="{StaticResource TransTextBox}" Text="{Binding FourthDate}"/>
                <TextBox Grid.Row="1" Style="{StaticResource TransTextBox}" Text="{Binding FourthWeather}"/>
                <TextBox Grid.Row="2" Style="{StaticResource TransTextBox}" Text="{Binding FourthTemp}"/>
                <TextBox Grid.Row="3" Style="{StaticResource TransTextBox}" Text="{Binding FourthWind}"/>
            </Grid>
        </Border>

        <Border Grid.Column="7" Background="White"/>


        <Border Grid.Column="8" x:Name="FifthBorder">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" Style="{StaticResource TransTextBox}" Text="{Binding FifthDate}"/>
                <TextBox Grid.Row="1" Style="{StaticResource TransTextBox}" Text="{Binding FifthWeather}"/>
                <TextBox Grid.Row="2" Style="{StaticResource TransTextBox}" Text="{Binding FifthTemp}"/>
                <TextBox Grid.Row="3" Style="{StaticResource TransTextBox}" Text="{Binding FifthWind}"/>
            </Grid>
        </Border>

    </Grid>
</Window>
