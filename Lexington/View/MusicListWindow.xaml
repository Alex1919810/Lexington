<Window x:Class="Lexington.View.MusicListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Lexington.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MusicListWindow"
        Width="100"
        Height="200"
        Style="{StaticResource stlWindow}"
        mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Button" />
        <Button Grid.Row="0"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Button" />
        <DataGrid Grid.Row="1"
                  Margin="0,5,0,0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="音乐名" />
                <DataGridTextColumn Width="*" Header="时长" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
