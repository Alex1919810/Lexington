<UserControl x:Class="LexingtonCustomControlLibrary.ChatInput.ChatInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Width="400"
             Height="250">
    <Grid>
        <!--  外层的圆角边框，并使用图片背景  -->
        <Border Margin="20"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="50">
            <Border.Background>
                <ImageBrush ImageSource="/LexingtonCustomControlLibrary;component/ChatInput/background_1.png" Stretch="UniformToFill" />
            </Border.Background>

            <StackPanel>
                <!--  上方标题  -->
                <TextBlock Margin="0,10"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Foreground="White"
                           Text="OvO" />

                <!--  文本框  -->
                <TextBox x:Name="MessageTextBox"
                         Height="100"
                         Margin="10"
                         VerticalAlignment="Top"
                         Background="#99000000"
                         Foreground="White"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
